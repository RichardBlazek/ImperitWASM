@code{
	[Parameter] public int Width { get; set; }
	[Parameter] public int Height { get; set; }
	[Parameter] public int FontSize { get; set; }
	[Parameter] public Func<Task>? OnClick { get; set; }
	[Parameter] public Point Center { get; set; }
	[Parameter] public IEnumerable<string> Text { get; set; } = Array.Empty<string>();
	double X => Center.x * Width;
	double Y => Center.y * Height;
}

<text x="@X" y="@(Y - (FontSize * 2))" @onclick="OnClick!" class="center" fill="#fff" dominant-baseline="middle" text-anchor="middle">
	@foreach (var line in Text)
	{
		<tspan x="@X" dy="@FontSize">@line</tspan>
	}
</text>