@code{
	[Parameter] public int Width { get; set; } = 1;
	[Parameter] public int Height { get; set; } = 1;
	[Parameter] public IEnumerable<Point>? Points { get; set; }
	[Parameter] public Color Fill { get; set; }
	[Parameter] public Color Stroke { get; set; }
	[Parameter] public int StrokeWidth { get; set; } = 0;
	[Parameter] public Func<Task>? OnClick { get; set; }
	string Path => string.Join(" ", Points?.Select(point => Width * point.x + "," + Height * point.y) ?? new[] { "" });
	public void Select(IEnumerable<Point>? points, Color fill)
	{
		Points = points;
		Fill = fill;
		this.StateHasChanged();
	}
}
@if (!(Points is null))
{
	<polyline points="@Path" fill="@Fill" stroke="@Stroke" stroke-width="@StrokeWidth" @onclick="OnClick!"></polyline>
}