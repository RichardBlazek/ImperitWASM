@inject ImperitClient http;

@using Mode = Data.View;

@code{
	[Parameter] public Data.Session Session { get; set; } = new Data.Session();
	[Parameter] public Func<Task>? LogoutAsync { get; set; }
	[Parameter] public Action<Mode, int?, int?, (int, int, string)?> Switch { get; set; } = ((a, x, y, z) => { });
	ImmutableArray<Data.PlayerInfo> PlayerInfos;
	int Active = 0;

	void Donate(int player)
	{
		Switch(Mode.Donation, null, null, (PlayerInfos.Try(Session.P)?.Money ?? 0, player, PlayerInfos.Try(player)?.Name ?? ""));
	}
	async Task DoGiveUp()
	{
		await http.PostAsync<Data.Session>("api/Command/GiveUp", Session);
		await LogoutAsync!();
	}
	protected override async Task OnInitializedAsync()
	{
		Active = (await http.PostAsync<int, Data.GameInfo>("api/Game/Info", Session.G)).P;
		PlayerInfos = await http.PostAsync<Data.Session, ImmutableArray<Data.PlayerInfo>>("api/Player/Infos", Session);
	}
}
<nav>
	<a @onclick="() => Switch(Mode.Map, null, null, null)">Zpět</a>
	<a class="this">@PlayerInfos.Try(Session.P)?.Money@Sym.Money</a>
</nav>
<main>
	@if (!PlayerInfos.IsDefault)
	{
		<p>Přihlášen: <span style="color:@PlayerInfos[Session.P].C;">@PlayerInfos[Session.P].Name</span></p>
		<p>Na tahu je: <span style="color:@PlayerInfos[Active].C;">@PlayerInfos[Active].Name</span></p>
		<table class="players">
			@foreach (var player in PlayerInfos.Where(p => p.D))
			{
				<tr>
					<td style="color:@player.C;">@player.Name</td>
					@if (player.Alive)
					{
						<td>@player.Money@Sym.Money</td>
						<td>(+@player.Income@Sym.Money)</td>
						@if (player.P == Session.P)
						{
							<td class="link-like" @onclick="DoGiveUp">Vzdát se</td>
						}
						else
						{
							<td class="link-like" @onclick="() => Donate(player.P)">Věnovat</td>
						}
					}
					else
					{
						<td colspan="3">není</td>
					}
				</tr>
			}
		</table><br/>
		@foreach (var info in PlayerInfos.Where(i => i.Debt > 0))
		{
			<p><span style="color:@info.C;">@info.Name</span> dluží @info.Debt@Sym.Money</p>
		}
	}
</main>