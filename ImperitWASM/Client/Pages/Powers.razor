@inject ImperitClient http;

@code{
	[Parameter] public Action Return { get; set; } = (() => { });
	Shared.Data.DisplayablePlayer[]? Players = null;
	PlayersPower[]? PowersArray = null;
	protected override async Task OnInitializedAsync()
	{
		Players = await http.GetJsonAsync<Shared.Data.DisplayablePlayer[]>("api/Player/Display");
		PowersArray = (await http.GetJsonAsync<PlayersPower[]>("api/Powers/List"));
	}
}
<nav>
	<a @onclick="Return">Zpět</a>
	<a class="this">Výsledky</a>
</nav>
<main>
	@if (Players != null && PowersArray != null)
	{
		<PowerGraphs Players="Players" Powers="PowersArray"/>
	}
</main>