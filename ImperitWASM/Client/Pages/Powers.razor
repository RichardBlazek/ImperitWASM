@inject ImperitClient http;

@code{
	[Parameter] public Action Return { get; set; } = (() => { });
	[Parameter] public Data.Session Session { get; set; } = new Data.Session();
	ImmutableArray<Data.ColoredPlayer> Players;
	ImmutableArray<PlayersPower> PowersArray;
	protected override async Task OnInitializedAsync()
	{
		Players = await http.PostAsync<int, ImmutableArray<Data.ColoredPlayer>>("api/Player/Colored", Session.G);
		PowersArray = await http.PostAsync<int, ImmutableArray<PlayersPower>>("api/Powers/List", Session.G);
	}
}
<nav>
	<a @onclick="Return">Zpět</a>
	<a class="this">Výsledky</a>
</nav>
<main>
	@if (!Players.IsDefaultOrEmpty && !PowersArray.IsDefaultOrEmpty)
	{
		<PowerGraphs Players="Players" Powers="PowersArray"/>
	}
</main>