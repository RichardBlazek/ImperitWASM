@inject ImperitClient http;

@code{
	[Parameter] public Action Return { get; set; } = () => { };
	[Parameter] public Server.Session Session { get; set; } = new Server.Session();
	Server.DisplayablePlayer[]? Players = null;
	PlayersPower[]? PowersArray = null;
	protected override async Task OnInitializedAsync()
	{
		Players = await http.GetJsonAsync<Server.DisplayablePlayer[]>("api/Player/Display");
		PowersArray = await http.PostJsonResponseAsync<int, PlayersPower[]>("api/Powers/List", Session.G);
	}
}
<nav>
	<a @onclick="Return">Zpět</a>
	<a class="this">Výsledky</a>
</nav>
<main>
	@if (Players != null && PowersArray != null)
	{
		<PowerGraphs Players="Players" Powers="PowersArray"/>
	}
</main>