@inject ImperitClient http;

@using Mode = Data.View;

@code{
	[Parameter] public Data.Session Session { get; set; } = new Data.Session();
	[Parameter] public Func<Task>? LogoutAsync { get; set; }
	[Parameter] public Action<Mode, int?, int?, Data.PlayerInfo?> Switch { get; set; } = ((a, x, y, z) => { });
	ImmutableArray<Data.PlayerInfo> Players;
	ImmutableArray<PlayersPower> Powers;
	int Active = 0;

	void Clicked(int player)
	{
		if (player != Session.P && Players[Session.P].M > 0)
		{
			Switch(Mode.Donation, null, null, Players.Try(Session.P));
		}
	}
	async Task DoGiveUp()
	{
		await http.PostAsync<Data.Session>("api/Command/GiveUp", Session);
		await LogoutAsync!();
	}
	protected override async Task OnInitializedAsync()
	{
		Active = await http.PostAsync<int, int>("api/Game/Active", Session.G);
		Players = await http.PostAsync<Data.Session, ImmutableArray<Data.PlayerInfo>>("api/Player/Infos", Session);
		StateHasChanged();
		Powers = await http.PostAsync<int, ImmutableArray<PlayersPower>>("api/Powers/List", Session.G);
	}
}
<nav>
	<a @onclick="() => Switch(Mode.Map, null, null, null)">Zpět</a>
	<a class="this">@Players.Try(Session.P)?.M@Sym.Money</a>
</nav>
<main>
	@if (!Players.IsDefaultOrEmpty && !Powers.IsDefaultOrEmpty)
	{
		<p>Na tahu je: <span style="color:@Players[Active].C;">@Players[Active].N</span></p>
		<table class="players">
			@foreach (int i in Players.Indices(p => p.D))
			{
				<tr @onclick="() => Clicked(i)">
					<td style="color:@Players[i].C;">@Players[i].N@Sym.Stars(Powers[^1][i].Final)</td>
					@if (Players[i].A)
					{
						<td>@Players[i].M@Sym.Money</td>
						<td>(+@Players[i].I@Sym.Money)</td>
						<td>
							@if (Players[i].Debt > 0)
							{
								<text>-@Players[i].Debt@Sym.Money</text>
							}
						</td>
					}
					else
					{
						<td colspan="3">není</td>
					}
				</tr>
			}
		</table><br/>
		<button @onclick="DoGiveUp">Vzdát se</button>
		<Graphs Players="Players" Powers="Powers"/>
	}
</main>